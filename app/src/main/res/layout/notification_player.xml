<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/black"
    android:id="@+id/notification_player_controls"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/notification_album_art"
        android:transitionName="album_art"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1.3"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/notification_song_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/notification_previous_button"
        android:transitionName="prev_button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ripple_oval"
        android:src="@drawable/ic_previous" />

    <ImageView
        android:id="@+id/notification_play_pause_button"
        android:transitionName="play_button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ripple_oval"
        android:src="@drawable/ic_play" />

    <ImageView
        android:id="@+id/notification_next_button"
        android:transitionName="next_button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ripple_oval"
        android:src="@drawable/ic_next" />

</LinearLayout>